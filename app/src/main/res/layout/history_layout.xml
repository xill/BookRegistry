<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="8dp"
              android:paddingRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/historyActiveTimeTf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="2018.01.01 17:29"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/clearHistoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Clear All"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/historyPanelBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/historyActiveTf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="1234567890123"
            android:textSize="25dp"/>

        <ImageButton
            android:id="@+id/historySearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/clearHistorySingleBtn"
            android:src="@drawable/ic_search_black_28dp"/>

        <Button
            android:id="@+id/clearHistorySingleBtn"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="true"
            android:text="x"/>
    </RelativeLayout>

    <ListView android:id="@+id/historyList"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
</LinearLayout>
